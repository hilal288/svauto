[sandvine-svpts]
name=Sandvine - SVPTS (Sandvine Policy Traffic Switch)
{% if release == 'prod' %}
baseurl=ftp://{{ftp_username}}:{{ftp_password}}@ftp.support.sandvine.com/release/CloudServices/{{ release_code_number }}/$releasever/svrepos/$basearch/svpts
{% endif %}
{% if (release == 'dev' and static_repo != 'true' and versioned_repo != 'true') %}
baseurl=ftp://{{ packages_server }}/centos/{{ release_code_name }}/$releasever/svrepos/$basearch/svpts
{% endif %}
{% if (release == 'dev' and static_repo != 'true' and versioned_repo == 'true') %}
baseurl=ftp://{{ packages_server }}/centos/{{ release_code_name }}/$releasever/svrepos/$basearch/svpts-{{ pts_version }}
{% endif %}
{% if (release == 'prod' and static_repo == 'true' and versioned_repo == 'true' and base_os == 'centos7') %}
baseurl=ftp://{{ftp_username}}:{{ftp_password}}@ftp.support.sandvine.com/release/PTS/PTSVPL/{{ pts_version }}/software/linux-rpm/repo/$releasever/$basearch
{% endif %}
{% if (release == 'dev' and static_repo == 'true' and versioned_repo == 'true' and base_os == 'centos6') %}
baseurl=ftp://{{ static_packages_server }}/images/Linux/CENTOS6-x64/SVPTS/svpts-LNX-{{ pts_version }}
{% endif %}
{% if (release == 'dev' and static_repo == 'true' and versioned_repo == 'true' and base_os == 'centos7') %}
baseurl=ftp://{{ static_packages_server }}/images/Linux/CENTOS7-x64/SVPTS/svpts-LNX-{{ pts_version }}
{% endif %}
enabled=1
protect=0
gpgcheck=0
sslverify=0
